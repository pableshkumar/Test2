<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Status_is_Rejected</fullName>
    <active>true</active>
    <description>if Status is Rejected, Please provide a valid rejection reason.</description>
    <errorConditionFormula>AND(ISPICKVAL(Status__c, &apos;Rejected&apos;), ISBLANK(Rejection_Reason__c))</errorConditionFormula>
    <errorMessage>Please provide a rejection reason.</errorMessage>
</ValidationRule>
