<apex:page sidebar="false" renderAs="pdf" StandardController="Invoice__c" extensions="InvoicePDFController">
    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">
        <tbody>
            <tr>
                <td></td>
                <td>
                    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">
                        <tbody>
                            <tr>
                                <td style="width:20%;"></td>
                                <td>
                                    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;margin-top: 67px;">
                                        <tbody>
                                            <tr>
                                                <td style="font-size: 28px; font-weight:bold;">TAX INVOICE</td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <apex:outputField value="{!invoiceDetails.Customer__r.Name}" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td style="">
                                                    <apex:outputField value="{!invoiceDetails.Purchase_Order__r.Bill_to_Address__c}" />
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </td>
                <td style="font-size: 12px;">
                    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">
                        <tbody>
                            <tr>
                                <td>
                                    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">

                                        <tbody>
                                            <tr>
                                                <td>
                                                    <apex:image url="{!$Resource.Logo}" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Invoice Date</b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Invoice_Date__c}" label="Invoice Date" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Invoice Number</b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Name}" label="Invoice Number" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>Reference</b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Purchase_Order__r.Name}" label="PO NO." />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <b>{!invoiceDetails.Project__r.TIG_Entity_Name__r.Tax_Name__c}</b>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>{!invoiceDetails.Project__r.TIG_Entity_Name__r.Tax_Code__c}</td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                                <td>
                                    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">
                                        <tbody>
                                            <tr>
                                                <td>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Name}" />
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Street_Address__c}" />
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.City__c}" />
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.State1__c}" />
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Zip_Postal_Code__c}" />
                                                </td>
                                            </tr>

                                            <tr>
                                                <td>
                                                    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Country1__c}" />
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>

            </tr>
        </tbody>
    </table>
    <table cellpadding="2" style="font-size: 14px; border-collapse:collapse; width: 100%; font-family: 'Open Sans', sans-serif;margin-top:100px;">
        <tbody>
            <tr style="color:#000">
                <th style="text-align:left">Description</th>
                <th>Quantity</th>
                <th>Unit Price</th>
                <th>GST</th>
                <th style="text-align:right;">Amount AUD</th>
            </tr>
            <tr style="text-align:center; vertical-align: top; border-top: 1px solid #000; border-bottom: 1px solid #000;">
                <td style="text-align:left">{!projectService} Services (OT); {!invoiceDetails.Project__r.TIG_Entity_Name__r.Country1__c}; {!purchaseMonth} </td>
                <td style="text-align:center">1.00
                    <br/>
                </td>
                <td style="text-align:center">{!invoiceLineDetails.Amount__c}</td>
                <td style="text-align:center">{!invoiceLineDetails.Tax_Type_1__c}{!invoiceLineDetails.Tax_Type_2__c}{!invoiceLineDetails.Tax_Type_3__c}</td>
                <td style="text-align:right">{!invoiceLineDetails.Total_Amount__c}</td>
            </tr>
            <tr style="text-align:center; vertical-align: top; border-top: 1px solid #000; border-bottom: 1px solid #000;">
                <td style="text-align:left">Project Name: {!invoiceDetails.Project__r.Name}</td>
                <td style="text-align:center">&nbsp;</td>
                <td style="text-align:center">&nbsp;</td>
                <td style="text-align:center">&nbsp;</td>
                <td style="text-align:right">&nbsp;</td>
            </tr>
            <tr style="text-align:center; vertical-align: top; border-top: 1px solid #000; border-bottom: 1px solid #000;">
                <td style="text-align:left">PAYMENT TERMS: PAYABLE WITHIN {!noOfDays} DAYS FROM INVOICE DATE</td>
                <td style="text-align:center"></td>
                <td style="text-align:center"></td>
                <td style="text-align:center"></td>
                <td style="text-align:right"></td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td colspan="4" style="text-align: right;">Sub-Total:</td>
                <td colspan="1" style="text-align: right;">{!invoiceLineDetails.Total_Amount__c}</td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td colspan="4" style="text-align: right;">TOTAL GST 10%</td>
                <td colspan="1" style="text-align: right;">{!invoiceLineDetails.Total_Amount__c}</td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td colspan="4" style="text-align: right;font-weight:bold;border-top: 1px solid #000;">TOTAL AUD</td>
                <td colspan="1" style="text-align: right;font-weight:bold;border-top: 1px solid #000;">{!invoiceLineDetails.Total_Amount__c}</td>
            </tr>
        </tbody>
    </table>
    <table style="border-collapse:collapse; font-size: 14px; width: 100%; font-family: 'Open Sans', sans-serif;">
        <tbody>
            <tr style="text-align: left;vertical-align: top;">
                <td>
                    <b style="font-size: 15px;">
                        Due Date:
                        <apex:outputField value="{!invoiceDetails.Due_Date__c}" />
                    </b>
                </td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td>If paying by EFT, details are:</td>
            </tr>
            <tr style="text-align: left;vertical-align: top;margin-top:10px;;">
                <td style="padding-top: 15px;">Name of the Bank :
               <!--     <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Bank_Name__c}" />  -->
                </td>

            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td>Account name:
              <!--      <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Account_Name__c}" />  -->
                </td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td>SWIFT:
                 <!--   <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Swift__c}" />  -->
                </td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td>BSB:
                 <!--   <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.BSB__c}" />  -->
                </td>
            </tr>
            <tr style="text-align: left;vertical-align: top;">
                <td>Bank Account Number:
                <!--    <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Bank_Account_Number__c}" />   -->
                </td>
            </tr>
        </tbody>
    </table>
    <p style="text-align:left;font-size: 14px; font-family: 'Open Sans', sans-serif; margin-top:15px;">
        Please email remittance advice at email id-
        <apex:outputField value="{!invoiceDetails.Project__r.TIG_Entity_Name__r.Email_Address_for_Remittance__c}" />
    </p>

</apex:page>