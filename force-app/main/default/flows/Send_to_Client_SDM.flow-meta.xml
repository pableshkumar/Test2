<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <decisions>
        <description>Check error message if it contains &quot;Please add primary external SDM in Project Team&quot;</description>
        <name>Check_error_message</name>
        <label>Check error message</label>
        <locationX>48</locationX>
        <locationY>304</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>External_SDM_Error</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Flow.FaultMessage</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Please add primary external SDM in Project Team</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>FaultScreen</targetReference>
            </connector>
            <label>External SDM Error</label>
        </rules>
    </decisions>
    <description>This flow will update the Billing Status with the of &quot;Sent to Client SDM&quot;</description>
    <interviewLabel>Send to Client SDM {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Send to Client SDM</label>
    <processMetadataValues>
