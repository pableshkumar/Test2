    <decisions>
        <description>Check Error message if it contains &quot;Please add primary internal SDM in Project Team&quot; error message</description>
        <name>Check_Error_message</name>
        <label>Check Error message</label>
        <locationX>58</locationX>
        <locationY>291</locationY>
        <defaultConnectorLabel>Default Outcome</defaultConnectorLabel>
        <rules>
            <name>internal_sdm_error_message_check</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>$Flow.FaultMessage</leftValueReference>
                <operator>Contains</operator>
                <rightValue>
                    <stringValue>Please add primary internal SDM in Project Team</stringValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>ShowErrortoUser</targetReference>
            </connector>
            <label>internal sdm error message check</label>
        </rules>
    </decisions>
    <description>Flow will update Billing Status to &quot;Send to SDM&quot; which further will call the approval process</description>
    <formulas>
        <name>FriendlyFaultMessage</name>
        <dataType>String</dataType>
        <expression>MID(
 {!$Flow.FaultMessage},
 FIND(&apos;FIELD_CUSTOM_VALIDATION_EXCEPTION: &apos;, {!$Flow.FaultMessage} )+34,
 (
   LEN({!$Flow.FaultMessage} ) - 
   (FIND(&apos;FIELD_CUSTOM_VALIDATION_EXCEPTION: &apos;, {!$Flow.FaultMessage} )+34)
 ) - 
 (
   LEN({!$Flow.FaultMessage} ) - 
   FIND(&apos;. For details, see API Exceptions&apos;, {!$Flow.FaultMessage} )
 )
)</expression>
    </formulas>
