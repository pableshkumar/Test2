<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>PO_Amount__c</field>
        <field>PO_Status__c</field>
        <field>CreatedBy</field>
        <field>Payment_Terms__c</field>
        <field>LastModifiedBy</field>
        <field>Billing_Frequency__c</field>
        <field>Bill_to_Address__c</field>
        <field>CurrencyIsoCode</field>
        <field>Current_PO_Balance__c</field>
        <field>Customer__c</field>
        <field>Customer_Purchase_Order__c</field>
        <field>Delivery_Instructions__c</field>
        <field>PO_Amount_Utilised__c</field>
        <field>PO_Approval_Status__c</field>
        <field>PO_Balance__c</field>
        <field>PO_End_Date__c</field>
        <field>PO_Start_Date__c</field>
        <field>Project__c</field>
        <field>RecordType</field>
        <field>Ship_to_Address__c</field>
        <field>Tax_Included__c</field>
        <field>Total_Billed_Value__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Sent_to_FI_Executive</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_PO_status_to_In_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Global_Delivery_Director</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>this will assign the approval process to Global Delivery Director for further action</description>
        <entryCriteria>
            <criteriaItems>
                <field>Order__c.RecordType</field>
                <operation>equals</operation>
                <value>Purchase Order</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order__c.PO_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Sent to Global Delivery Director</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Global Delivery Director</label>
        <name>Global_Delivery_Director</name>
        <rejectionActions>
            <action>
                <name>Update_Stage_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Sent_to_Finance_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_PO_status_to_In_Approval</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Finance_Executive</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>in this step approval will be assign to Finance Executive for further action</description>
        <entryCriteria>
            <criteriaItems>
                <field>Order__c.RecordType</field>
                <operation>equals</operation>
                <value>Purchase Order</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order__c.PO_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Sent to Finance Executive</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Finance Executive</label>
        <name>Finance_Executive</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Stage_Sent_to_Global_Delivery_Director</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_PO_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Finance_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>this will assign the approval to Finance Manager</description>
        <entryCriteria>
            <criteriaItems>
                <field>Order__c.RecordType</field>
                <operation>equals</operation>
                <value>Purchase Order</value>
            </criteriaItems>
            <criteriaItems>
                <field>Order__c.PO_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Sent to Finance Manager</value>
            </criteriaItems>
        </entryCriteria>
        <label>Finance Manager</label>
        <name>Finance_Manager</name>
        <rejectBehavior>
            <type>BackToPrevious</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>PO_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Stage_Sent_to_FI_Executive</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>approval cycle for purchase order</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Order__c.RecordType</field>
            <operation>equals</operation>
            <value>Purchase Order</value>
        </criteriaItems>
        <criteriaItems>
            <field>Order__c.PO_Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Stage_Sent_to_Global_Delivery_Director</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_PO_status_to_In_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Purchase Order Approval</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
