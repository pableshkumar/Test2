<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Customer__c</field>
        <field>Project__c</field>
        <field>Total_Amount__c</field>
        <field>Billing_Approval_Status__c</field>
        <field>Billing_End_Date__c</field>
        <field>Billing_Start_Date__c</field>
        <field>Billing_Status__c</field>
        <field>Owner</field>
        <field>CreatedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>AP_Update_Approval_Status</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Billing_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Send billing sheet to TIG SDM.</description>
        <label>Send to TIG SDM</label>
        <name>Send_to_TIG_SDM</name>
        <rejectionActions>
            <action>
                <name>AP_Reject_Request</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>This process is triggered when billing sheet submit by vendor.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Billing_Information__c.RecordType</field>
            <operation>equals</operation>
            <value>Vendor</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>AP_Update_Approval_Status2</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>AP Approval Process</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
