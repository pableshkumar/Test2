<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <submitter>Sr_Project_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Approval_Stage_Controller__c</field>
        <field>Billing_Frequency__c</field>
        <field>Bill_to_Address__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>Current_PO_Balance__c</field>
        <field>Customer__c</field>
        <field>CustomerProjectAmount__c</field>
        <field>Customer_Purchase_Order__c</field>
        <field>Delivery_Instructions__c</field>
        <field>GP__c</field>
        <field>LastModifiedBy</field>
        <field>Payment_Terms__c</field>
        <field>PO_Amount__c</field>
        <field>PO_Amount_Utilised__c</field>
        <field>PO_Balance__c</field>
        <field>PO_End_Date__c</field>
        <field>PO_Start_Date__c</field>
        <field>PO_Status__c</field>
        <field>Project__c</field>
        <field>RecordType</field>
        <field>Ship_to_Address__c</field>
        <field>PO_Approval_Status__c</field>
        <field>Tax_Included__c</field>
        <field>Total_Billed_Value__c</field>
        <field>VendorAccountAmount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_PO_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Project_Management_Head</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>approval will be assigned to Project Management Head for further action</description>
        <entryCriteria>
            <formula>AND(RecordType.DeveloperName == &quot;Purchase_Order&quot; , ISPICKVAL(Approval_Stage_Controller__c , &quot;Project Management&quot;), ISPICKVAL( PO_Approval_Status__c , &quot;Sent to Project Management Head&quot;), (GP__c) &gt; 0.30 &amp;&amp; (GP__c) &lt;= 0.35 , (PO_Amount__c &gt; (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c - (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c * 100 * GP__c))))</formula>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>PMHead</label>
        <name>PManagerHead</name>
        <rejectionActions>
            <action>
                <name>Update_Stage_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>it will run for Project Department only when GP is greater than 30% and up to 35% and the Vendor PO amount is greater than Customer Project Value - GP% of Customer Total Project Value.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.DeveloperName == &quot;Purchase_Order&quot; , ISPICKVAL(PO_Status__c , &quot;Draft&quot;), (GP__c) &gt; 0.30 &amp;&amp; (GP__c) &lt;= 0.35, (PO_Amount__c &gt; (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c - (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c * 100 * GP__c))))</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Stage_Controller_P_Management</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Sent_to_Project_Management_Head</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_PO_status_to_In_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>GP Approval for PMO till 35%</label>
    <processOrder>3</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
