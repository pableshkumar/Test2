<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AR_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AR_Head</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AR_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AR_SR_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AR_SR_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>Billing_End_Date__c</field>
        <field>Billing_Start_Date__c</field>
        <field>Billing_Approval_Status__c</field>
        <field>Description__c</field>
        <field>Project__c</field>
        <field>Total_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>AR_Managers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>AR Manager Approval</description>
        <label>AR Manager Approval</label>
        <name>AR_Manager_Approval</name>
    </approvalStep>
    <description>will be fired once status updated as &quot;AR Manager&quot;</description>
    <emailTemplate>Billing_Information_Email_Templates/AR_Manager_Approval_Notification</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Billing_Information__c.Billing_Approval_Status__c</field>
            <operation>equals</operation>
            <value>Sent to AR Manager</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Update_Approved_by_AR_Manager_Checkbox</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Billing_Status_Rework</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notify_billing_owner_for_the_rejection</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_to_Required</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>AR Manager</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
