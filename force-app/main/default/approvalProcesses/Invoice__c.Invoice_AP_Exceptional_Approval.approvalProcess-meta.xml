<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Amount__c</field>
        <field>Amount_Recieved_Paid__c</field>
        <field>Billing_Information__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>Customer__c</field>
        <field>Disputed_Amount__c</field>
        <field>Due_Date__c</field>
        <field>Invoice_Date__c</field>
        <field>Invoice_Sent_Received_Date__c</field>
        <field>Invoice_Type__c</field>
        <field>LastModifiedBy</field>
        <field>Number_of_Invoice_Line_Items__c</field>
        <field>Outstanding_Amount__c</field>
        <field>Payment_Terms__c</field>
        <field>Project__c</field>
        <field>Purchase_Order__c</field>
        <field>RecordType</field>
        <field>Service_Month__c</field>
        <field>Settlement_Date__c</field>
        <field>Stage__c</field>
        <field>Status__c</field>
        <field>TIG_Entity__c</field>
        <field>Total_Amount__c</field>
        <field>Total_Tax__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_Validate_Invoice</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Finance_Manager</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Exception Approval Required</label>
        <name>Exception_Approval_Required</name>
        <rejectionActions>
            <action>
                <name>Stage_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Reject_Invoice</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Invoice__c.Status__c</field>
            <operation>equals</operation>
            <value>Exception Approval Needed</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.RecordType</field>
            <operation>equals</operation>
            <value>Purchase Invoice</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Invoice AP Exceptional Approval</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
