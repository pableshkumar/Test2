<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Billing_Start_Date__c</field>
        <field>Billing_Status__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Update_Status_to_Sent_to_AR_Manager</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Approver will be AR Executive/ AR Sr. Executive</description>
        <entryCriteria>
            <criteriaItems>
                <field>Billing_Information__c.Billing_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Sent to AR Executive/ AR Sr. Executive</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>AR Executive/ AR Sr. Executive Approval</label>
        <name>AR_Executive_AR_Sr_Executive_Approval</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>AR Manager</description>
        <entryCriteria>
            <criteriaItems>
                <field>Billing_Information__c.Billing_Approval_Status__c</field>
                <operation>equals</operation>
                <value>Sent to AR Manager</value>
            </criteriaItems>
        </entryCriteria>
        <label>AR Manager</label>
        <name>AR_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Billing Approval V.1</label>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
