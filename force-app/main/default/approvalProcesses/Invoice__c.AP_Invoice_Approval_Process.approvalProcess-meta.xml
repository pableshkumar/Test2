<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>Customer__c</field>
        <field>00N2x000006bi2p</field>
        <field>Project__c</field>
        <field>Status__c</field>
        <field>00N9D000002dE5l</field>
        <field>00N2x000006bi27</field>
        <field>00N9D000002dE5v</field>
        <field>CurrencyIsoCode</field>
        <field>00N9D000002dOMb</field>
        <field>Invoice_Type__c</field>
        <field>Invoice_Date__c</field>
        <field>00N2x000006bi3J</field>
        <field>00N9D000002dnNf</field>
        <field>00N9D000002dE5g</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>AP_Executive_Sr_AP_Executive</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Send to AP Executive/Sr. Executive</label>
        <name>Send_to_AP_Executive_Sr_Executive</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Send_email_to_Finance</name>
                <type>Alert</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Finance_Executive</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Request send to Finance.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Send to Finance</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>Send to Finance</label>
        <name>Send_to_Finance</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <type>adhoc</type>
            </approver>
        </assignedApprover>
        <description>Request send to TIG SDM.</description>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Disputed</value>
            </criteriaItems>
            <criteriaItems>
                <field>Invoice__c.RecordType</field>
                <operation>equals</operation>
                <value>Purchase Invoice</value>
            </criteriaItems>
        </entryCriteria>
        <label>Invoice Send to TIG SDM</label>
        <name>Invoice_Send_to_TIG_SDM</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>This process is triggered when Invoice is submitted by Vendor.</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Invoice__c.RecordType</field>
            <operation>equals</operation>
            <value>Purchase Invoice</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.Status__c</field>
            <operation>equals</operation>
            <value>Draft</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>AP Invoice Approval Process</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>false</showApprovalHistory>
</ApprovalProcess>
