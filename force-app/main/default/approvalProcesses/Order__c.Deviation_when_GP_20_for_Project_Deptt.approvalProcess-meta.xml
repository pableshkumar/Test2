<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <submitter>Project_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Customer__c</field>
        <field>Customer_Purchase_Order__c</field>
        <field>PO_Start_Date__c</field>
        <field>PO_End_Date__c</field>
        <field>Project__c</field>
        <field>RecordType</field>
        <field>PO_Status__c</field>
        <field>PO_Approval_Status__c</field>
        <field>PO_Amount__c</field>
        <field>CustomerProjectAmount__c</field>
        <field>VendorAccountAmount__c</field>
        <field>Payment_Terms__c</field>
        <field>CreatedBy</field>
        <field>LastModifiedBy</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Sent_to_Global_Delivery_Director</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>FI_Head</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>approval cycle for Project Department on Vendor PO where GP at Customer Project is greater and equal to  20% (20% inclusive) then approval will be assigned to Finance Head</description>
        <entryCriteria>
            <formula>AND(RecordType.DeveloperName == &quot;Purchase_Order&quot;, ISPICKVAL(PO_Status__c , &quot;In Approval&quot;), ISPICKVAL(Approval_Stage_Controller__c ,&quot;Project Management&quot;), ISPICKVAL(PO_Approval_Status__c, &quot;Sent To Finance Head&quot;), ((PO_Amount__c) &gt; ((Customer_Purchase_Order__r.Project__r.Total_Project_Value__c) - ((Customer_Purchase_Order__r.Project__r.GP__c) * (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c)))), (Customer_Purchase_Order__r.Project__r.GP__c) &gt;= 0.2)</formula>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Fi. Head</label>
        <name>Fi_Head</name>
        <rejectionActions>
            <action>
                <name>Notify_Project_Manager_when_Order_is_not_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_Stage_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Notify_Record_Owner_when_Order_is_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Update_PO_Status_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Stage_to_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Global_Delivery_Director</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>approval cycle for Project Department on Vendor PO where GP at Customer Project is greater and equal to  20% (20% inclusive) then approval will be assigned to Global Delivery Director</description>
        <entryCriteria>
            <formula>AND(RecordType.DeveloperName == &quot;Purchase_Order&quot;, ISPICKVAL(PO_Status__c , &quot;In Approval&quot;), ISPICKVAL(Approval_Stage_Controller__c ,&quot;Project Management&quot;), ISPICKVAL(PO_Approval_Status__c, &quot;Sent to Global Delivery Director&quot;), ((PO_Amount__c) &gt; ((Customer_Purchase_Order__r.Project__r.Total_Project_Value__c) - ((Customer_Purchase_Order__r.Project__r.GP__c) * (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c)))), (Customer_Purchase_Order__r.Project__r.GP__c) &gt;= 0.2)</formula>
        </entryCriteria>
        <label>GlobalDeliveryD</label>
        <name>GlobalDeliveryD</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Notify_Finance_Head_when_Order_is_not_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Notify_Project_Manager_when_Order_is_not_approved</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Stage_Send_to_Project_Manager</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Status_to_Draft</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <description>approval cycle of Deviation Approval for Project Department on Vendor PO where GP at Customer Project is greater and equal to 20% (20% inclusive)</description>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>AND(RecordType.DeveloperName == &quot;Purchase_Order&quot;, ISPICKVAL(PO_Status__c , &quot;Draft&quot;), ((PO_Amount__c) &gt; ((Customer_Purchase_Order__r.Project__r.Total_Project_Value__c) - ((Customer_Purchase_Order__r.Project__r.GP__c) * (Customer_Purchase_Order__r.Project__r.Total_Project_Value__c)))), (Customer_Purchase_Order__r.Project__r.GP__c) &gt;= 0.2)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Approval_Stage_Controller_P_Management</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_Sent_to_Finance_Head</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_PO_status_to_In_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Deviation when GP&gt;=20% for Project Dept.</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
