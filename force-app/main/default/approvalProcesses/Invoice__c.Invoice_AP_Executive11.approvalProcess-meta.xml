<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AP_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AP_Head</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AP_Manager</submitter>
        <type>role</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>AP_SR_Executive</submitter>
        <type>role</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Status__c</field>
        <field>Billing_Information__c</field>
        <field>CreatedBy</field>
        <field>CurrencyIsoCode</field>
        <field>Customer__c</field>
        <field>Due_Date__c</field>
        <field>Invoice_Date__c</field>
        <field>Invoice_Sent_Received_Date__c</field>
        <field>Invoice_Type__c</field>
        <field>LastModifiedBy</field>
        <field>Payment_Terms__c</field>
        <field>Project__c</field>
        <field>Purchase_Order__c</field>
        <field>RecordType</field>
        <field>Service_Month__c</field>
        <field>Settlement_Date__c</field>
        <field>TIG_Entity__c</field>
        <field>Amount__c</field>
        <field>Amount_Recieved_Paid__c</field>
        <field>Disputed_Amount__c</field>
        <field>Number_of_Invoice_Line_Items__c</field>
        <field>Outstanding_Amount__c</field>
        <field>Stage__c</field>
        <field>Total_Amount__c</field>
        <field>Total_Tax__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_Validate_Invoice</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AP_Executive_Sr_AP_Executive</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Check SOW &amp; PO</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Check SOW &amp; PO</label>
        <name>Check_SOW_PO</name>
        <rejectionActions>
            <action>
                <name>Stage_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Reject_Invoice</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Accepted</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>AP_Executive_Sr_AP_Executive</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Validate Invoice</label>
        <name>Validate_Invoice</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Stage_On_Hold</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Dispute</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>1 AND (2 OR 3) AND 4</booleanFilter>
        <criteriaItems>
            <field>Invoice__c.RecordType</field>
            <operation>equals</operation>
            <value>Purchase Invoice</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.Status__c</field>
            <operation>equals</operation>
            <value>Check SOW &amp; PO</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.Status__c</field>
            <operation>equals</operation>
            <value>Validate Invoice</value>
        </criteriaItems>
        <criteriaItems>
            <field>Invoice__c.Stage__c</field>
            <operation>equals</operation>
            <value>Submitted,On Hold,Rejected</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <label>Invoice AP Executive</label>
    <processOrder>4</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
