<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>Finance_Executive</submitter>
        <type>roleSubordinates</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Actual_Due_Date__c</field>
        <field>Amount__c</field>
        <field>CurrencyIsoCode</field>
        <field>Customer__c</field>
        <field>Due_Date__c</field>
        <field>Invoice_Date__c</field>
        <field>Invoice_Type__c</field>
        <field>Project__c</field>
        <field>Stage__c</field>
        <field>Status__c</field>
        <field>Total_Amount__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Status_Send_Department_Head</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>SDM</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Validate Invoice</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Status : Send to Department Manager</label>
        <name>Status_Send_to_Department_Manager</name>
        <rejectionActions>
            <action>
                <name>Step1_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Delivery_Stage1</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Step_3_In_Current_Payment_Batch</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_2_Send_to_Department_Head</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Head_of_Delivery</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Send to Department Head</value>
            </criteriaItems>
            <criteriaItems>
                <field>Invoice__c.Total_Amount__c</field>
                <operation>lessOrEqual</operation>
                <value>&quot;USD 1,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Invoice Amount Less than Value</label>
        <name>Invoice_Amount_Less_than_Value</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Step2_Status_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Delivery_Stage2</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Status1_Send_to_C_Group</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>Head_of_Delivery</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Send to Department Head</value>
            </criteriaItems>
            <criteriaItems>
                <field>Invoice__c.Total_Amount__c</field>
                <operation>greaterThan</operation>
                <value>&quot;USD 1,000&quot;</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Invoice Amount Greater than Value</label>
        <name>Invoice_Amount_Greater_than_Value</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Status_Step_4_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Delivery_Stage3</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <approvalActions>
            <action>
                <name>Stage_Step_4_In_Current_Payment_Batch</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Status_Step_4_Approved</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>C_Group</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <entryCriteria>
            <criteriaItems>
                <field>Invoice__c.Status__c</field>
                <operation>equals</operation>
                <value>Send to C Group</value>
            </criteriaItems>
        </entryCriteria>
        <label>Status : Send to C Group</label>
        <name>Status_Send_to_C_Group</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
        <rejectionActions>
            <action>
                <name>Status_Step4_Rejected</name>
                <type>FieldUpdate</type>
            </action>
            <action>
                <name>Update_Delivery_Stage4</name>
                <type>FieldUpdate</type>
            </action>
        </rejectionActions>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <formula>(TEXT(Project__r.Cost_Center__c) == &apos;Delivery&apos;) &amp;&amp;
( RecordType.Name == &apos;Indirect Purchase Invoice&apos;) &amp;&amp;
(TEXT ( Stage__c) == &apos;Submitted&apos;)</formula>
    </entryCriteria>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Indirect_Expense_Update_Status</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Delivery Indirect Expense</label>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
