        <action>
            <name>Approval_Status_Pending</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Approval_Status_Send_to_Finance_Head</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
